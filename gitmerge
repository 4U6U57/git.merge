#!/bin/bash

ExeDir="$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)"

# Boolean class
True=0
False=1
Boolean() {
   return $1
}

# Exit behavior
OnExit() {
   Echo "Exiting program"
}
trap "OnExit; exit" SIGHUP SIGINT SIGTERM

# Echo Configuration
source $ExeDir/Echo.sh
EchoPrefix="$(EchoColor Cyan)gitmerge$(EchoColor):"

# Program start
Echo "Git repository merging utility"
